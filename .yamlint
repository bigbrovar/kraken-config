---
extends: default

rules:
  line-length:
    max: 80
    level: error
  indentation:
    spaces: 2
    indent-sequences: true
  document-start: disable
  comments:
    min-spaces-from-content: 2
  comments-indentation: {}
  trailing-spaces: {}
  truthy:
    allowed-values: ['true', 'false']
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 0
